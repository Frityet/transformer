// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Debian",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers-extra/features/haskell": {
			"installHLS": true,
			"downgradseGhcToSupportHls": true,
			"installStack": true,
			"installStackGHCupHook": true,
			"adjustBash": true,
			"ghcVersion": "recommended",
			"cabalVersion": "recommended",
			"globalPackages": "hlint",
			"globalLibraries": "hspec hspec-contrib QuickCheck HUnit"
		},
		"ghcr.io/devcontainers/features/common-utils": {
			"installZsh": false,
			// "installOhMyZsh": true,
			// "installOhMyZshConfig": true,
			"upgradePackages": true,
			"username": "vscode",
			"userUid": "automatic",
			"userGid": "automatic"
		},
		"ghcr.io/audacioustux/devcontainers/common-utils-extras": {},
		"ghcr.io/devcontainers-community/features/llvm": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"haskell.haskell",
				"llvm-vs-code-extensions.vscode-clangd"
			],
			"settings": {
				"haskell.serverExecutablePath": "${HOME}/.local/bin/haskell-language-server-9.6.7"
			}
		}
	},
	"onCreateCommand": "sudo apt update && sudo apt install -y libgmp-dev"

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
